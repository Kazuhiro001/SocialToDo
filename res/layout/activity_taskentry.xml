<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TaskEntryActivity" >

 	    <TableRow
 	        android:id="@+id/tableRow0"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content" >
			<TextView
        		android:id="@+id/textView1"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="情報を入力してください。"
        	/>
			<TextView
        		android:id="@+id/textView1"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="赤文字は必須項目です。"
        		android:textColor="#FFFF0000"
        	/>
 	    </TableRow>

 	    <TableRow
 	        android:id="@+id/tableRow2"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content" >
  			<TextView
        		android:id="@+id/textView2"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="タスク名"
        		android:textColor="#FFFF0000"
        	/>
 	        <EditText
 				android:id="@+id/editTextForName"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        	/>
 	    </TableRow>


 	    <TableRow
 	        android:id="@+id/tableRow3"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content" >
 			<TextView
        		android:id="@+id/textView3"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="タスク詳細"
        	/>
 	        <EditText
 				android:id="@+id/editTextForInfo"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        	/>
 	    </TableRow>

 	    <TableRow
 	        android:id="@+id/tableRow4"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content" >
 			<TextView
        		android:id="@+id/textView4"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="重要度"
        		android:textColor="#FFFF0000"
        	/>
 	        <Spinner
 				android:id="@+id/spinnerForPriority"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        	/>
 	    </TableRow>

 	    <TableRow
 	        android:id="@+id/tableRow5"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content" >
 			<TextView
        		android:id="@+id/textView5"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="締切期日"
        		android:textColor="#FFFF0000"
        	/>
 			<Button android:id="@+id/buttonForDeadLineDate"
         		android:layout_width="fill_parent"
         		android:layout_height="wrap_content"
         		android:text="締切期日を設定"
    		/>
 	        <EditText
 				android:id="@+id/editTextForDeadLineDate"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        	/>
 	    </TableRow>

 	    <TableRow>
 			<TextView
        		android:id="@+id/textView6"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="締切時間"
        		android:textColor="#FFFF0000"
        	/>
 			<Button android:id="@+id/buttonForDeadLineTime"
         		android:layout_width="fill_parent"
         		android:layout_height="wrap_content"
         		android:text="締切時間を設定"
    		/>
 	        <EditText
 				android:id="@+id/editTextForDeadLineTime"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        	/>
 	    </TableRow>

		<TableRow
 	        android:id="@+id/tableRow7"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content" >
 			<TextView
        		android:id="@+id/textView7"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="タスクの所属グループ"
        		android:textColor="#FFFF0000"
        	/>
 	        <Spinner
 				android:id="@+id/spinnerForGroup"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        	/>
 	    </TableRow>

 	    <TableRow
 	        android:id="@+id/tableRow8"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content" >
 	  		<Button android:id="@+id/buttonToEntry"
         		android:layout_width="fill_parent"
         		android:layout_height="wrap_content"
         		android:text="タスク登録"
    		/>
 	    </TableRow>


 	    <TableRow
 	        android:id="@+id/tableRow100"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content" >
 	  		<Button android:id="@+id/buttonToMain"
         		android:layout_width="fill_parent"
         		android:layout_height="wrap_content"
         		android:text="メイン画面へ"
    		/>
 	    </TableRow>



</TableLayout>
